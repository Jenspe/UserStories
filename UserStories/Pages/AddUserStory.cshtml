@page
@model UserStories.Pages.AddUserStoryModel
@{
    ViewData["Title"] = "AddUserStory";
}
<style>
    h5 {
        text-align: center;
        color: blueviolet
    }
</style>



<h6 style="color:blue"> Create a new UserStory</h6>
<form class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.userStory.Title" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.userStory.Title" type="text" class="form-control">
            <span asp-validation-for="@Model.userStory.Title" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.userStory.Description" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.userStory.Description" type="text" class="form-control">
            <p>Stadig aktiv, lad være blank</p>
            <span asp-validation-for="@Model.userStory.Description" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.userStory.BusinessValue" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.userStory.BusinessValue" type="text" class="form-control">
            <span asp-validation-for="@Model.userStory.BusinessValue" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.userStory.Priority" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.userStory.Priority" type="text" class="form-control">
            <span asp-validation-for="@Model.userStory.Priority" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.userStory.StoryPoints" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.userStory.StoryPoints" type="text" class="form-control">
            <span asp-validation-for="@Model.userStory.StoryPoints" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="border-success">
                Add UserStory
            </button>
        </div>
    </div>
</form>